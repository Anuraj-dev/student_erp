# ERP Student Management System - Environment Configuration
# Government of Rajasthan | Backend Configuration Template
# 
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Update the values with your actual configuration
# 3. Never commit .env to version control

# ==========================================
# Flask Configuration
# ==========================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# ==========================================
# Database Configuration
# ==========================================
# Development (SQLite)
SQLALCHEMY_DATABASE_URI=sqlite:///instance/student_erp_dev.db

# Production (PostgreSQL - recommended)
# SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost/student_erp_prod

# MySQL Alternative
# SQLALCHEMY_DATABASE_URI=mysql://username:password@localhost/student_erp_prod

# ==========================================
# JWT Authentication
# ==========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# ==========================================
# Email Configuration (Gmail example)
# ==========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@rajasthan.gov.in

# Government Email Configuration (Alternative)
# MAIL_SERVER=mail.rajasthan.gov.in
# MAIL_PORT=587
# MAIL_USERNAME=erp@rajasthan.gov.in
# MAIL_PASSWORD=your-government-email-password

# ==========================================
# Redis Configuration (Production)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# File Upload Configuration
# ==========================================
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=app/static/uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# ==========================================
# Government Integration
# ==========================================
GOV_DEPARTMENT_NAME=Education Department, Government of Rajasthan
GOV_DEPARTMENT_CODE=RAJ-EDU
GOV_OFFICE_ADDRESS=Secretariat, Jaipur, Rajasthan
GOV_CONTACT_EMAIL=education@rajasthan.gov.in
GOV_WEBSITE=https://education.rajasthan.gov.in

# ==========================================
# PDF Generation
# ==========================================
PDF_LOGO_PATH=app/static/images/rajasthan_logo.png
PDF_WATERMARK=Government of Rajasthan - Confidential
QR_CODE_BASE_URL=https://verify.rajasthan.gov.in/document/

# ==========================================
# Security Configuration
# ==========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_LOGIN=5 per minute
RATE_LIMIT_API=100 per minute
RATE_LIMIT_UPLOAD=10 per minute

# ==========================================
# Development/Testing Flags
# ==========================================
SKIP_EMAIL_VERIFICATION=True  # Set to False in production
TESTING=False
WTF_CSRF_ENABLED=True  # CSRF protection

# ==========================================
# Production Deployment
# ==========================================
# PORT=5000
# WORKERS=4  # For Gunicorn
# WORKER_CLASS=gevent
# WORKER_CONNECTIONS=1000
# MAX_REQUESTS=1000
# PRELOAD_APP=True

# ==========================================
# Backup Configuration
# ==========================================
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
# BACKUP_LOCATION=/var/backups/erp

# ==========================================
# Monitoring & Analytics
# ==========================================
# SENTRY_DSN=your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=your-ga-id-here
# ENABLE_METRICS=True
